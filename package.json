{
  "name": "payment-form",
  "version": "0.0.1",
  "description": "Standalone payment form UI component for domain registration",
  "scripts": {
    "dev": "esbuild src/main.js --bundle --outdir=dist --format=esm --sourcemap --loader:.html=text --loader:.css=text --watch --servedir=.",
    "build": "esbuild src/main.js --bundle --outdir=dist --format=esm --minify --loader:.html=text --loader:.css=text",
    "preview": "npx serve .",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:run": "node --test"
  },
  "type": "module",
  "homepage": "https://namewiz.github.io/payment-form",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namewiz/payment-form.git"
  },
  "bugs": {
    "url": "https://github.com/namewiz/payment-form/issues"
  },
  "author": "Justice Ogbonna <dev@justiceo.com>",
  "keywords": [
    "domain-registration",
    "domain-payment",
    "standalone-payment-component"
  ],
  "engines": {
    "node": "^22.12.0",
    "npm": "^10.9.0"
  },
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.10",
    "jsdom": "^25.0.1"
  }
}
